/**
 * Implements hook_preprocess_HOOK().
 */
function custom_menu_preprocess_custom_menu_page_element(&$variables) {
  $title_classes = &$variables['title_attributes_array']['class'];
  $content_classes = &$variables['content_attributes_array']['class'];
  $title_classes[] = 'test-render-element';
  $content_classes[] = 'render-content';
}

/**
 * Implements hook_preprocess_HOOK().
 */
function custom_menu_preprocess_custom_menu_page_content(&$variables) {
  $title_classes = &$variables['title_attributes_array']['class'];
  $content_classes = &$variables['content_attributes_array']['class'];
  $classes = &$variables['classes_array'];
  $classes[] = 'rendered';
  $title_classes[] = 'title-callback';
  $content_classes[] = 'show-content';
}

